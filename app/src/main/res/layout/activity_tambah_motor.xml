<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hanifah.sipuk.TambahMotor">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Silakan isi data dibawah ini untuk menambah data motor"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/logo"
        android:textSize="18sp"
        android:textColor="#fff"
        android:layout_centerHorizontal="true"
        android:id="@+id/txtinfo2"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/line_register"
        android:layout_below="@+id/txtinfo2"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <EditText
            android:id="@+id/etRegisNama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/et_background1"
            android:hint="Nama Motor"
            android:textColor="#000"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textColorHint="#999999" />

        <EditText
            android:id="@+id/etRegisKet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/et_background1"
            android:hint="Keterangan"
            android:inputType="textPersonName"
            android:textColor="#000"
            android:padding="10dp"
            android:textColorHint="#999999"
            android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/etRegisHarga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/et_background1"
            android:hint="Harga (Rp.)"
            android:textColor="#000"
            android:inputType="number"
            android:padding="10dp"
            android:textColorHint="#999999"
            android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/etRegisSilinder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/et_background1"
            android:hint="Isi Silinder"
            android:textColor="#000"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textColorHint="#999999"
            android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/etRegisTahun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/et_background1"
            android:hint="Tahun Pembuatan"
            android:textColor="#000"
            android:inputType="number"
            android:padding="10dp"
            android:textColorHint="#999999"
            android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/etRegisDP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/et_background1"
            android:hint="Minimal DP"
            android:textColor="#000"
            android:inputType="number"
            android:padding="10dp"
            android:textColorHint="#999999"
            android:layout_marginTop="10dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pilih Jenis Motor"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:textColor="#fff"
            />

        <Spinner
            android:padding="10dp"
            android:id="@+id/sp_jenis"
            android:entries="@array/listJenis"
            android:background="@drawable/et_background1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></Spinner>

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cardlist_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="15dp"
            android:foreground="@color/cardview_shadow_end_color"
            android:orientation="vertical"
            card_view:cardCornerRadius="10dp"

            card_view:cardElevation="@dimen/cardview_default_elevation">

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="200dp" />

        </android.support.v7.widget.CardView>


        <Button
            android:id="@+id/btnBrowseGambar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:padding="10dp"
            android:text="Browse"
            android:background="@drawable/btn_back1"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            />

        <Button
            android:id="@+id/btnRegisMotor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:padding="10dp"
            android:text="Simpan"
            android:enabled="false"
            android:background="@drawable/btn_back1"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            />

    </LinearLayout>



    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="20dp"
        android:visibility="gone" />

</RelativeLayout>

    </ScrollView>
    </RelativeLayout>
